
{
  "manifest_version": 3,
  "name": "ChatPod",
  "version": "1.0",
  "description": "Summarize and export AI chat conversations to a clean PDF.",
  "permissions": [
    "scripting",
    "activeTab",
    "tabs"
  ],
  "host_permissions": [
    "https://chat.openai.com/*",
    "https://chatgpt.com/*",
     "https://api.groq.com/*",
      "https://generativelanguage.googleapis.com/*"

  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "icons": {
    "16": "icons/icon1024.png",
    "48": "icons/icon1024.png",
    "128": "icons/icon1024.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*"

      ],
      "js": ["content.js"]
    }
  ]
}